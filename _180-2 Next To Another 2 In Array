class Solution {
    public boolean twoTwo(int[] arr) {
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == 2) {
                boolean hasLeftTwo  = (i > 0 && arr[i - 1] == 2);
                boolean hasRightTwo = (i < arr.length - 1 && arr[i + 1] == 2);

                if (!hasLeftTwo && !hasRightTwo) {
                    return false;
                }
            }
        }

        return true;
    }
}
