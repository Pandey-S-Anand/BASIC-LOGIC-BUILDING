// 1 + 1/x^1 + 1/x^2 + 1/x^3 .......+1/x^n=?

import java.lang.Math;
class Solution{
    public static float Series(int n,int x){
        if(n<=0 || x<=0) //invalid Input
          return -1;
        
        float sum=0f;
        int count=0;
        for(int i=1;i<=n;i++)
        {
           sum+=1/Math.pow(x,count);
           count++;
        }
        return sum;
    }
}
