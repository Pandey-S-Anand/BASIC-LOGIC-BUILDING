class Solution {
    private static boolean isAlternate(int[] arr, int n) {
        boolean isLastPositive = arr[0] >= 0;

        for (int i = 1; i < n; i++) {
            // If the current element has same sign as the last one â†’ not alternating
            if ((isLastPositive && arr[i] >= 0) || (!isLastPositive && arr[i] < 0)) {
                return false;
            }

            // Update last sign
            isLastPositive = !isLastPositive;
        }

        return true;
    }
}

