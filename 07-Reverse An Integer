//Method 1- Iterative Approach

class Solution{
    public static int reverse(int num){
        int rev=0;
        while(num!=0)
        {
           int last=(num%10);
           rev=rev*10+last; 
           num=num/10;
        }
        return rev;
    }
}

//Method 2- Using StringBuilder

class Solution{
    public static int reverse(int num){
        int sign=1;      
        if(num<0)
        {
          num=Math.abs(num);
          sign=-1;  
        }

      return  Integer.parseInt(new StringBuilder(Integer.toString(num)).reverse().toString())*sign;
    }
}


//Method3- Recursive Approach

class Solution{
   public static int reverseNumber(int number) {
      if (number >= 0 && number <=9) {
        return number;
      }

      return (number% 10) * (int) Math.pow(10, (int)(Math.log10(Math.abs(number) + 1))-1) + reverseNumber(number / 10);
   }
}
