//Method 1- Iterative Approach

class Solution {
    public static int reverse(int num) {
        int sign = num < 0 ? -1 : 1;
        num = Math.abs(num);

        int reversed = 0;

        while (num != 0) {
            int lastDigit = num % 10;
            reversed = reversed * 10 + lastDigit;
            num /= 10;
        }

        return sign * reversed;
    }
}


//Method 2- Using StringBuilder

class Solution {
    public static int reverse(int num) {
        int sign = num < 0 ? -1 : 1;

        return Integer.parseInt(new StringBuilder(Integer.toString(num)).reverse().toString()) * sign;
    }
}


//Method3- Recursive Approach

class Solution {
    public static int reverseNumber(int num) {
        int sign = num < 0 ? -1 : 1;
        num = Math.abs(num);

        return sign * reverseHelper(num);
    }

    private static int reverseHelper(int num) {
        if (num < 10) {
            return num;
        }

        int lastDigit = num % 10;
        int numDigits = (int) Math.log10(num) + 1;
        int placeValue = (int) Math.pow(10, numDigits - 1);

        return lastDigit * placeValue + reverseHelper(num / 10);
    }
}
