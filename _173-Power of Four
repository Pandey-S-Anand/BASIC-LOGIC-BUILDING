//Bruteforce Approach

//Iterative version

class Solution {
    public boolean isPowerOfFour(int num) {    
        while(true)
        {
          if(num==1)
            break;

          if((num%4)!=0 || num==0)
            return false;
             
          num=num/4;//num=num>>2
        }

       return true;
    }
}

//Recurssive version

class Solution {
    public boolean isPowerOfFour(int num) {
        if(num==1)
          return true;
          
        if((num%4)!=0 || num==0)
           return false;
           
        return isPowerOfFour(num/4); //return isPowerOf4(num>>2);
    }
}

