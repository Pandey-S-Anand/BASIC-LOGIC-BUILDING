//Bruteforce Approach

class Solution {
    public int[] getConcatenation(int[] arr) {
        int[] ans = new int[2 * arr.length];

        System.arraycopy(arr, 0, ans, 0, arr.length);
        System.arraycopy(arr, 0, ans, arr.length, arr.length);

        return ans;
    }
}


//Optimal Approach

class Solution {
    public int[] getConcatenation(int[] arr) {
        int[] ans = new int[2 * arr.length];

        for (int i = 0; i < arr.length; i++) {
            ans[i] = arr[i];
            ans[arr.length + i] = arr[i];
        }

        return ans;
    }
}
