//Without Recursion

class Solution {
  int sum(int arr[], int n) {
    int sum=0;
        
    for(int i=0;i<n;i++){
      sum+=arr[i];
    } 
         
    return sum;
  }
}

//Using Recursion

class Solution {
  int sum(int arr[], int n) {
    if(n==0){
      return 0;
    }
    return arr[n-1]+sum(arr,n-1);
  }
}
