//Using array

class Solution {
    public int[] createTargetArray(int[] values, int[] index) {
        int[] target = new int[values.length];

        for (int i = 0; i < values.length; i++) {
            insertAtIndex(target, index[i], values[i]);
        }

        return target;
    }

    private void insertAtIndex(int[] arr, int insertIndex, int value) {
        // Shift elements one position to the right, starting from the end until the insertion point is reached.
        for (int i = arr.length - 1; i > insertIndex; i--) {
            arr[i] = arr[i - 1];
        }

        // Place the value at the specified index
        arr[insertIndex] = value;
    }
}


//Using Arraylist

class Solution {
    public int[] createTargetArray(int[] values, int[] positions) {
        List<Integer> targetArrayList = new ArrayList<>();
        int[] targetArray = new int[values.length];

        for (int i = 0; i < values.length; i++) {
            targetArrayList.add(positions[i], values[i]);
        }

        for (int i = 0; i < values.length; i++) {
            targetArray[i] = targetArrayList.get(i);
        }

        return targetArray;
    }
}
