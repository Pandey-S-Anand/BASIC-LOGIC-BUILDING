//1+2+3+4+.........+n=?

class Solution {
    public static int series(int n) {
        if (n <= 0){/ invalid Input
            return -1;
        }

        int sum = 0;
        if (n % 2 == 0) {
            sum = (n / 2) * (n + 1);
        } else {
            sum = ((n + 1) / 2) * n;
        }

        return sum;
    }
}
