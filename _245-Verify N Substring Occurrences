//Using Recursion

class Solution {
    public boolean strCopies(String str, String sub, int n) {
        return strCopies(str, sub, 0, n);
    }

    private boolean strCopies(String str, String sub, int index, int n) {
        if (n == 0) {
            return true;
        }

        if (index + sub.length() > str.length()) {
            return false;
        }

        if (str.startsWith(sub, index)) {
            return strCopies(str, sub, index + 1, n - 1);
        }

        return strCopies(str, sub, index + 1, n);
    }
}


//Without Recursion

class Solution {
    public boolean strCopies(String str, String sub, int count) {
        for (int i = 0; i <= (str.length() - sub.length()); i++) {
            if (str.startsWith(sub, i)) {
                count--;
            }

            if (count == 0) {
                return true;
            }
        }

        return false;
    }
}
