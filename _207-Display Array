//Using Recursion

class Solution{
   public static  void displayArray(int []arr,int idx){  // idx will be passed as 0
      if(idx==arr.length)
	return;
	     
      System.out.println(arr[idx]);
      displayArray(arr,idx+1);
   }
}

//Without Recursion

class Solution{
   public static void displayArray(int []arr){
      for(int i=0;i<arr.length;i++){
         System.out.print(arr[i]+" ");
      } 
   }
}
