/*Q-To Print

    *    
   * *   
  * * *  
 * * * * 
* * * * *

*/

// Figure Specific Code

class Solution {
    public static void pattern() {
        for (int row = 1; row <= 5; row++) {  // Used 'row' for i
            int flag = 1;
            for (int column = 1; column <= 9; column++) {  // Used 'column' for j
                if (column >= (6 - row) && column <= (4 + row)) {
                    if (flag == 1) {
                        System.out.print("*");
                    } else {
                        System.out.print(" ");
                    }
                    flag = 1 - flag;
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}

// Generalized Code

class Solution {
    public static void pattern(int n) {
        for (int row = 1; row <= n; row++) {  // Used 'row' for i
            int flag = 1;
            for (int column = 1; column <= (2 * n - 1); column++) {  // Used 'column' for j
                if (column >= (n + 1 - row) && column <= (n - 1 + row)) {
                    if (flag == 1) {
                        System.out.print("*");
                    } else {
                        System.out.print(" ");
                    }
                    flag = 1 - flag;
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}
