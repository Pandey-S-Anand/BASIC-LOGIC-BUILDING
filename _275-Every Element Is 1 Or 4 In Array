//Using Recursion

class Solution{ 
  public boolean only14(int[] arr) {
    if (arr.length == 0) {
        return true; 
    }

    if (arr[0] != 1 && arr[0] != 4) {
        return false; 
    }

    return only14(Arrays.copyOfRange(arr, 1, arr.length));
  }
}


//Without Using Recursion

class Solution{
  public boolean only14(int[] arr) {
    for(int i=0;i<arr.length;i++){
      if (arr[i] != 1 && arr[i] != 4) {
        return false; 
      }
    }
    return true;
  }
}
