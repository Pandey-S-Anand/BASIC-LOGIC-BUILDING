//Using Recursion

class Solution{
  public String noX(String str) {
    if(str.isEmpty()){
      return str;
    }

    return (str.charAt(0)=='x'?"":str.charAt(0))+noX(str.substring(1));
  }
}


//Without Using Recursion

class Solution{
   public String noX(String str) {
     int n=str.length();
     StringBuilder result=new StringBuilder();
  
     for(int i=0;i<n;i++){
       if(str.charAt(i)!='x'){
         result.append(str.charAt(i));
       }
     }
  
     return result.toString();
   }
}
