class Solution {
    public int countClumps(int[] arr) {
        int consecutiveCount = 1;
        int clumpCount = 0;

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] == arr[i - 1]) {
                consecutiveCount++;
            } else {
                if (consecutiveCount >= 2) {
                    clumpCount++;
                }
                consecutiveCount = 1;
            }
        }

        if (consecutiveCount >= 2) {
            clumpCount++;
        }

        return clumpCount;
    }
}
