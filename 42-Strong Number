/*
Strong number is a special number whose sum of the factorial of digits is equal to the original number. For Example: 145 is strong number. 
*/

class Solution{  
  public static boolean isStrong(int num){
     long sum=0;
     int temp=num;
     long[]fact=factorial(9);
     
     while(temp!=0)
     {
       sum+=fact[temp%10];
       temp=temp/10;
     }
	   
     if(num==sum)
        return true;
     else 
        return false;
  }
	
  public static long[] factorial (int num)
  {
    long[]fact=new long[num+1];
    fact[0]=1;

    for(int i=1;i<=num;i++)
      fact[i]=fact[i-1]*i;

    return fact;
  }
}
