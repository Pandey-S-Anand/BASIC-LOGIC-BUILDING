/*
The process of writing a number as the product of prime numbers is prime factorization.
Prime numbers are the numbers that have only two factors, 1 and the number itself. For example, 2, 3, 5, 7, 11, 13, 17, 19, and so on are prime numbers.
*/

//Bruteforce Approach

class Solution {
    public static ArrayList<Integer> primeFac(int num) {
        ArrayList<Integer> primeFactors = new ArrayList<>();
        
        for (int i = 2; i <= num; i++) {
            if (num % i == 0) {
                primeFactors.add(i);
                while (num % i == 0) {
                    num /= i;
                }
            }
        }
        
        return primeFactors;  
    }
}


//Better Approach

class Solution {
    public static ArrayList<Integer> primeFac(int num) {
        ArrayList<Integer> primeFactors = new ArrayList<>();

        for (int i = 2; i <= num / 2; i++) {
            if (num % i == 0) {
                primeFactors.add(i);
                while (num % i == 0) {
                    num /= i;
                }
            }
        }

        if (num != 1) {
            primeFactors.add(num);
        }

        return primeFactors;
    }
}



//Optimal Approach

class Solution {
    public static ArrayList<Integer> primeFac(int num) {
        ArrayList<Integer> primeFactors = new ArrayList<>();
        int sqrt=(int)Math.sqrt(num);
        
        for (int i = 2; i <= sqrt; i++) {
            if (num % i == 0) {
                primeFactors.add(i);
                while (num % i == 0) {
                    num /= i;
                }
            }
        }
        
        if (num != 1) {
           primeFactors.add(num);
        }
        
        return primeFactors;  
    }
}
