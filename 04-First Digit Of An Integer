
//Method 1- log based approach

class Solution{
    public static int firstDigit(int num){
        if(num==0)
          return num;

        if(num<0)
          num=Math.abs(num);
          
       int cntDigit=(int)(Math.log10(num) + 1);
       int temp=(int)Math.pow(10,cntDigit-1);
       int first=num/temp;
       
       return first;
    }
}


//Method 2 - Iterative Approach

class Solution{
   public static int firstDigit(int num){
      if(num>=0 && num<=9){
        return num;
      }

      return firstDigit(Math.abs(num)/10);
   }
}

//Method 3 - First Convert the given integer to string and then first char of string – ‘0’ is our answer.

 class Solution{
    public static int firstDigit(int num){
       if(num<0)
         num=Math.abs(num);

       String str=Integer.toString(num);

       return str.charAt(0)-'0';
    }
}
