//Method 1- log based approach

class Solution {
    public static int firstDigit(int num) {
        if (num == 0) {
            return num;
        }

        if (num < 0) {
            num = Math.abs(num);
        }

        int digitCount = (int) (Math.log10(num) + 1);
        int divisor = (int) Math.pow(10, digitCount - 1);
        int firstDigit = num / divisor;

        return firstDigit;
    }
}

//Method 2 - First Convert the given integer to string and then first char of string – ‘0’ is our answer.

class Solution {
    public static int firstDigit(int num) {
        if (num < 0) {
            num = Math.abs(num);
        }

        return Integer.toString(num).charAt(0) - '0';
    }
}


//Method 3 - Recursive approach

class Solution {
    public static int firstDigit(int num) {
        return firstDigitHelper(Math.abs(num));
    }

    private static int firstDigitHelper(int num) {
        if (num < 10) {
            return num;
        }
        return firstDigitHelper(num / 10);
    }
}
