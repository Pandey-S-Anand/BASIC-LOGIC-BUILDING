//Using Recursion

class Solution{
    public static void displayArrayInReverse(int []arr,int idx){  //Intially idx=0
      if(idx==arr.length){
	return;
      }
	   
      displayArrayInReverse(arr,idx+1);  
      System.out.print(arr[idx]+" ");
   }
}


//Without Recursion

class Solution{
  public static void displayArrayInReverse(int []arr){
     for(int i=arr.length-1;i>=0;i--){
        System.out.print(arr[i]+" ");
     } 
  }
}
