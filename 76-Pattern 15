/*

6543210
543210 
43210  
3210   
210    
10     
0 
   
*/

class Solution {
    public static void pattern15(){
       for(int i=1;i<=7;i++)
       {   
           int data=7-i;
           for(int j=1;j<=7;j++)
            if(j<=(8-i))
            {
                System.out.print(data);
                 data--;
            }
            else
                 System.out.print(" ");
                 
          System.out.println(); 
       }
    }
}
