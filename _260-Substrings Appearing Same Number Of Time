//Without Using Recursion

class Solution{
   public boolean catDog(String str) {
     int i=0,count=0;
    
     while(i<str.length()){
       if(str.substring(i).startsWith("cat")){
         count++;
         i+=3;
       }else if(str.substring(i).startsWith("dog")){
         count--;
         i+=3;
       }else{
         i++;
      }
    }
    return count==0;
  }
}


//Using Recursion

class Solution{
  public boolean catDog(String str) {
     return catDogHelper(str)==0;
  }

  public int catDogHelper(String str){
    if(str.length()<3){
      return 0;
    }
  
    if(str.startsWith("cat")){
      return 1+catDogHelper(str.substring(3));
    }
  
    if(str.startsWith("dog")){
      return catDogHelper(str.substring(3))-1;
    }
  
    return catDogHelper(str.substring(1));
  }
}
