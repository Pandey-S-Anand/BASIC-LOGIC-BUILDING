class Solution {
    public String sameEnds(String str) {
        int middle = str.length() / 2;

        String leftHalf = str.substring(0, middle);
        String rightHalf = null;

        if (str.length() % 2 == 0) {
            rightHalf = str.substring(middle);
        } else {
            rightHalf = str.substring(middle + 1);
        }

        while (!leftHalf.equals(rightHalf)) {
            leftHalf = leftHalf.substring(0, leftHalf.length() - 1);
            rightHalf = rightHalf.substring(1);
        }

        return leftHalf;
    }
}
