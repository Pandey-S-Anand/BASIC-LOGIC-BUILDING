//Naive Approach

class Solution {
    public String capitalizeTitle(String title) {
        StringBuilder modifiedString = new StringBuilder();

        for (String str : title.toLowerCase().split(" ")) {
            if (str.length() <= 2) {
                modifiedString.append(str);
            } else {
                modifiedString.append(Character.toUpperCase(str.charAt(0)));
                modifiedString.append(str.substring(1, str.length()));
            }
            modifiedString.append(" ");
        }

        return modifiedString.toString().trim();
    }
}


//Good Approach

class Solution {
    public String capitalizeTitle(String title) {
        title = title.toLowerCase();
        StringBuilder modifiedString = new StringBuilder();

        int startIndex = 0;
        int endIndex = 0;

        while (endIndex < title.length()) {
            startIndex = endIndex;
            while (endIndex < title.length() && title.charAt(endIndex) != ' ') {
                endIndex++;
            }

            int wordLength = endIndex - startIndex;

            if (wordLength > 2) {
                modifiedString.append(Character.toUpperCase(title.charAt(startIndex)) + title.substring(startIndex + 1, endIndex));
            } else {
                modifiedString.append(title.substring(startIndex, endIndex));
            }

            modifiedString.append(" ");
            endIndex++;
        }

        return modifiedString.toString().trim();
    }
}


//Better Approach

class Solution {
    public String capitalizeTitle(String title) {
        title = title.toLowerCase();

        StringBuilder modifiedString = new StringBuilder();
        StringBuilder currentWord = new StringBuilder();
        int index = 0;

        while (index < title.length()) {
            // Build the current word
            while (index < title.length() && title.charAt(index) != ' ') {
                currentWord.append(title.charAt(index));
                index++;
            }

            // Capitalize if word length is more than 2
            if (currentWord.length() > 2) {
                currentWord.setCharAt(0, Character.toUpperCase(currentWord.charAt(0)));
            }

            // Append processed word
            modifiedString.append(currentWord).append(" ");

            // Reset for the next word
            currentWord.setLength(0);

            // Move past the space
            index++;
        }

        return modifiedString.toString().trim();
    }
}


//Optimal Approach

class Solution {
    public String capitalizeTitle(String title) {
        char[] arr = title.toLowerCase().toCharArray();
        int wordStart = 0, wordEnd = 0;

        while (wordEnd < arr.length) {
            // Find end of the current word
            wordStart = wordEnd;
            while (wordEnd < arr.length && arr[wordEnd] != ' ') {
                wordEnd++;
            }

            // Capitalize if word length > 2
            if (wordEnd - wordStart > 2) {
                arr[wordStart] = Character.toUpperCase(arr[wordStart]);
            }

            wordEnd++; // Move past the space
        }

        return new String(arr);
    }
}
