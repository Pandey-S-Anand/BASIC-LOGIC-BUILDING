//Without Using Recursion

class Solution{
   public String notReplace(String str) {
      int n=str.length(),start=0;
      String sub;
      StringBuilder result=new StringBuilder();
  
      for(int i=0;i<n;i++){
        if(!Character.isLetter(str.charAt(i))){
          sub=str.substring(start,i);
          result.append(sub.equals("is")?"is not":sub).append(str.charAt(i));
          start=i+1;
        }
      }
  
      sub=str.substring(start);
      result.append(sub.equals("is")?"is not":sub);
  
    return result.toString();
   }
}


//Using Recursion

class Solution{
  public String notReplace(String str) {
    return notReplace(str,0,0);
  }

  public String notReplace(String str,int index,int start) {
     if(index==str.length()){
       String sub=str.substring(start);
       return sub.equals("is")?"is not":sub;
     }
  
     if(!Character.isLetter(str.charAt(index))){
       String sub=str.substring(start,index);
       return (sub.equals("is")?"is not":sub)+str.charAt(index) + notReplace(str,index+1,index+1);
     }
  
    return notReplace(str,index+1,start);
  }
}
