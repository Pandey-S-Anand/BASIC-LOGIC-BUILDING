//Using Recursion

class Solution {
    public String pairStar(String str) {
        if (str.isEmpty()) {
            return str;
        }
        return pairStar(str, 0);
    }

    private String pairStar(String str, int index) {
        // Base case: last character reached
        if (index == str.length() - 1) {
            return String.valueOf(str.charAt(index));
        }

        // If two adjacent chars are same, insert '*'
        if (str.charAt(index) == str.charAt(index + 1)) {
            return str.charAt(index) + "*" + pairStar(str, index + 1);
        }

        // Otherwise, move to next character
        return str.charAt(index) + pairStar(str, index + 1);
    }
}


//Without Using Recursion

class Solution {
    public String pairStar(String str) {
        StringBuilder modifiedString = new StringBuilder();

        for (int i = 0; i < (str.length() - 1); i++) {
            modifiedString.append(str.charAt(i));
            if (str.charAt(i) == str.charAt(i + 1)) {
                modifiedString.append("*");
            }
        }

        modifiedString.append(str.length() > 0 ? str.charAt(str.length() - 1) : "");

        return modifiedString.toString();
    }
}
