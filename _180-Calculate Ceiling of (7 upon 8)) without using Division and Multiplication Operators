class Solution { 
    public static int multiplyBy7_upon_8(int n) {
       int res=(n<<0)-(n>>3);
       return res;
    }
}
    
 /*
      (7*n/8) = n*(7/8) = n*(1-(1/8)) = (n-(n/8)) = ((n<<0)-(n>>3))

      we know:
      x<<y = x*2^y

      if(y==0)
       x<<0 =x*(2^0)=x*1=x
       
      we know:
      x>>y=x/2^y

      if(y==3)
      x>>3= x/(2^3)= x/8     
*/
