
class Solution{
  public static boolean sumPrime(int num){
     if(isPrime(num-2)){
         return true;
     }
     
     return false;
  }
  
  public static boolean isPrime(int num){
     if(num<=1){
       return false;
     }

     if(num==2){
       return true;
     }
     
     for(int i=2;i<=Math.sqrt(num);i++){
        if(num%2==0){
           return false;
        }
     }
     
     return true;
  }
}
