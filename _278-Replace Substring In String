//Without Using Recursion

class Solution {
    public String notReplace(String str) {
        StringBuilder modifiedString = new StringBuilder();
        int i = 0;

        while (i < str.length()) {
            if (str.startsWith("is", i)) {
                boolean leftIsLetter = i > 0 && Character.isLetter(str.charAt(i - 1));
                boolean rightIsLetter = i + 2 < str.length() && Character.isLetter(str.charAt(i + 2));

                if (!leftIsLetter && !rightIsLetter) {
                    modifiedString.append("is not");
                    i += 2;
                    continue;
                }
            }
            modifiedString.append(str.charAt(i));
            i++;
        }

        return modifiedString.toString();
    }
}

//Using Recursion

class Solution {
    public String notReplace(String str) {
       return notReplace(str,0);
    }

    private String notReplace(String str, int i) {
        if (i == str.length()) {
            return "";
        }

        if (str.startsWith("is", i)) {
            boolean leftIsLetter = i > 0 && Character.isLetter(str.charAt(i - 1));
            boolean rightIsLetter = i + 2 < str.length() && Character.isLetter(str.charAt(i + 2));

            if (!leftIsLetter && !rightIsLetter) {
                return "is not" + notReplace(str, i + 2);
            }
        }

        return str.charAt(i) + notReplace(str, i + 1);
    }
}
