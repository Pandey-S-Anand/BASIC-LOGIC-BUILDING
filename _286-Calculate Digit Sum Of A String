class Solution {
    public String digitSum(String str, int k) {
        while (str.length() > k) {
            str = compressStringByGroupSum(str, k);
        }

        return str;
    }

    private String compressStringByGroupSum(String str, int k) {
        StringBuilder newString = new StringBuilder();

        for (int i = 0; i < str.length(); i += k) {
            int sumOfGroup = 0;
            for (int j = i; j < (i + k) && j < str.length(); j++) {
                sumOfGroup += str.charAt(j) - '0';
            }

            newString.append(sumOfGroup);
        }

        return newString.toString();
    }
}
