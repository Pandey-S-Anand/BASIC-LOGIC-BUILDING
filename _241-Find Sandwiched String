//Without Recursion

class Solution {

    public String getSandwich(String str) {
        int firstOccurenceIndex = str.indexOf("bread");

        if (firstOccurenceIndex == -1) {
            return ""; // No "bread" found
        }

        int lastOccurenceIndex = str.lastIndexOf("bread");

        if (firstOccurenceIndex == lastOccurenceIndex) {
            return ""; // Only one "bread" found, sandwich not possible
        }

        // Content within the sandwich
        return str.substring(firstOccurenceIndex + 5, lastOccurenceIndex);
    }
}



//Using Recursion

class Solution {
    public String getSandwich(String str) {
        // If string is empty OR exactly equals one "bread", no sandwich possible
        if (str.isEmpty() || str.equals("bread")) {
            return "";
        }

        // Move inward from left until the first "bread" appears
        if (!str.startsWith("bread")) {
            return getSandwich(str.substring(1));
        }

        // Move inward from right until the last "bread" appears
        if (!str.endsWith("bread")) {
            return getSandwich(str.substring(0, str.length() - 1));
        }

        // Two breads exist → valid sandwich → return content in between
        return str.substring(5, str.length() - 5);
    }
}
