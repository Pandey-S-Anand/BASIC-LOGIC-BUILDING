// Using Recursion
class Solution {
    public static void displayArray(int[] arr, int index) { // index will be passed as 0
        if (index == arr.length) {
            return;
        }
        System.out.println(arr[index]);
        displayArray(arr, index + 1);
    }
}

// Without Recursion
class Solution {
    public static void displayArray(int[] arr) {
        for (int i = 0; i < arr.length; i++) {
            System.out.print(arr[i] + " ");
        }
    }
}
