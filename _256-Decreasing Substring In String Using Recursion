//Without Recursion

class Solution{
  public String repeatFront(String str, int n) {
    String sub=str.substring(0,n);
    StringBuilder result=new StringBuilder();
  
    while(!sub.isEmpty()){
      result.append(sub);
      sub=sub.substring(0,sub.length()-1);
    }
  
   return result.toString();
  }
}



//Using Recursion

class Solution{
  public String repeatFront(String str, int n) {
    if(str.isEmpty() || n==0){
      return "";
    }
    return str.substring(0,n)+repeatFront(str.substring(0,n),n-1);
  }
}
