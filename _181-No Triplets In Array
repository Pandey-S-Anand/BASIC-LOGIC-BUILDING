class Solution {
    public boolean noTriples(int[] arr) {
        if (arr.length < 3) {
            return true;
        }

        for (int i = 2; i < arr.length; i++) {
            boolean firstEqualsSecond = arr[i] == arr[i - 1];
            boolean secondEqualsThird = arr[i - 1] == arr[i - 2];

            if (firstEqualsSecond && secondEqualsThird) {
                return false;
            }
        }

        return true;
    }
}
