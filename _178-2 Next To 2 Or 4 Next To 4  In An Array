class Solution {
    public boolean either24(int[] arr) {
        boolean hasPairOfTwos = false;
        boolean hasPairOfFours = false;

        for (int i = 0; i < arr.length - 1; i++) {

            if (arr[i] == 2 && arr[i + 1] == 2) {
                hasPairOfTwos = true;
            } else if (arr[i] == 4 && arr[i + 1] == 4) {
                hasPairOfFours = true;
            }

            // If both pairs appear : not allowed
            if (hasPairOfTwos && hasPairOfFours) {
                return false;
            }
        }

        // Valid only if exactly one of them appears
        return hasPairOfTwos || hasPairOfFours;
    }
}
