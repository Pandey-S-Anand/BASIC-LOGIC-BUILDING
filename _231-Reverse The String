//Using Recursion

class Solution {
    public String reverseString(String str) {
        if (str.isEmpty()) {
            return str;
        }
        
        return str.charAt(str.length() - 1) + reverseString(str.substring(0, str.length() - 1));
    }
}


//Aliter

class Solution {
    public String reverseString(String str) {
        return reverseString(str.toCharArray(), 0);
    }

    private String reverseString(char[] arr, int index) {
        // Base case: reached middle â†’ array is fully reversed
        if (index == (arr.length / 2)) {
            return new String(arr);
        }

        // Swap the characters at index and its mirror position
        swap(arr, index, arr.length - 1 - index);

        // Move inward
        return reverseString(arr, index + 1);
    }

    private void swap(char[] arr, int i, int j) {
        char temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }
}



//Without Using Recursion

class Solution {
    public static String reverseString(String str) {
        return new StringBuilder(str).reverse().toString();
    }
}


//Aliter

class Solution {
    public static String reverseString(String str) {
        char[] arr = str.toCharArray();

        for (int i = 0; i < (arr.length / 2); i++) {
            char temp = arr[i];
            arr[i] = arr[arr.length - 1 - i];
            arr[arr.length - 1 - i] = temp;
        }

        return new String(arr);
    }
}
