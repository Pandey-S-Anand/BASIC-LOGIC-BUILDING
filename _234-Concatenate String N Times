//Using Recursion

class Solution{
  public String stringTimes(String str, int n) {
    if(n==0){
      return "";
    }
  
    return str+stringTimes(str,n-1);
  }
}


//Without Recursion

class Solution{
  public String stringTimes(String str, int n) {
    StringBuilder result=new StringBuilder();
  
    for(int i=1;i<=n;i++){
      result.append(str);
    }
  
    return result.toString();
  }
}
