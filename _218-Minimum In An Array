//Using Recursion

class Solution{
   public int minInArray(int []arr){ 
      if(arr.length==0){
        return Integer.MAX_VALUE;
      }

      if(arr.length==1){
      	return arr[0];
      }
	     
      return Math.min(arr[0],minInArray(Arrays.copyOfRange(arr,1,arr.length)));
  }
}


//Without Recursion

class Solution{
    public int minInArray(int arr[]){
       if(arr.length==0){
         return Integer.MAX_VALUE;
       }

       int mixIndex=0;
       for(int i=1;i<arr.length;i++){
	  if(arr[i]<arr[mixIndex]){
	     minIndex=i;
	  }
       }

      return arr[minIndex];   
    }
}


//Aliter

class Solution{
   public int minInArray(int arr[]){
      if(arr.length==0){
        return Integer.MAX_VALUE; 
      }

      Arrays.sort(arr);

      return arr[0];
   }
}
