//Without Recursion

//Method 1:Using Extra Space

class Solution{
    public static void reverse(int[] arr) {
        int[] temp=new int[arr.length];

        for(int i=0;i<arr.length;i++)
          temp[i]=arr[n-1-i];
          
        for(int i=0;i<n;i++)
          arr[i]=temp[i];
    } 
}

//Method 2: Without using Extra Space

class Solution{
    public static void reverse(int[] arr) {
      for(int i=0;i<(arr.length/2);i++){
          int temp=arr[i];
          arr[i]=arr[arr.length-1-i];
          arr[arr.length-1-i]=temp;
      }
    } 
}



//Using Recursion 

Method 1 : Reverse the entire array

class Solution{
   public static void reverse(int[] arr,int index) {  //Intial value of index is 0
       if(index==(arr.length/2)){
          return;
       }
       
       int temp=arr[index];
       arr[index]=arr[arr.length-1-index];
       arr[arr.length-1-index]=temp;
       
       reverse(arr,index+1);
    } 
}

//Aliter 

Method 2 : Reverse the array within the specified indexes

class Solution{
   public static void reverse(int[] arr,int startIndex,int endIndex) {
       if(startIndex>=endIndex){
          return ;
       }
       
       int temp = arr[startIndex];
       arr[startIndex] = arr[endIndex];
       arr[endIndex] = temp;
         
       reverse(arr,startIndex+1,endIndex-1);
   } 
}
