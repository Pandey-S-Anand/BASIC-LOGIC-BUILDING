class Solution {
    public int[] zeroMax(int[] arr) {
        int largestOddOnRight = -1;

        for (int i = arr.length - 1; i >= 0; i--) {
            // Replace zero with the largest odd seen so far on the right
            if (arr[i] == 0 && largestOddOnRight != -1) {
                arr[i] = largestOddOnRight;
            }

            // Update the largest odd number encountered so far
            if (arr[i] % 2 != 0 && arr[i] > largestOddOnRight) {
                largestOddOnRight = arr[i];
            }
        }

        return arr;
    }
}
