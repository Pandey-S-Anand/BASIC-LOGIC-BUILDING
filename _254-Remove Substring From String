//Using Recursion

class Solution {
    public String stringYak(String str) {
        return stringYak(str, 0);
    }

    private String stringYak(String str, int index) {
        // Base case: reached end of string
        if (index >= str.length()) {
            return "";
        }

        // If "yak"-like pattern found (y?k), skip it
        if (index + 2 < str.length() && str.charAt(index) == 'y' && str.charAt(index + 2) == 'k') {
            return stringYak(str, index + 3);
        }

        // Otherwise, include current character and continue recursion
        return str.charAt(index) + stringYak(str, index + 1);
    }
}


//Without Using Recursion

public String stringYak(String str) {
    StringBuilder modifiedString = new StringBuilder();
    int i = 0;

    while (i < str.length()) {
        // Check for pattern 'y?k' where '?' can be any character
        if (i + 2 < str.length() && str.charAt(i) == 'y' && str.charAt(i + 2) == 'k') {
            i += 3; // Skip 'yak' pattern entirely
        } else {
            modifiedString.append(str.charAt(i));
            i++;
        }
    }

    return modifiedString.toString();
}
