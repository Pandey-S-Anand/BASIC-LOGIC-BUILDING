//Without Using Recursion

class Solution {
    public boolean xyzThere(String str) {
        int i = 0;

        /**
         * Scan through the string while enough characters remain
         * to form the substring "xyz".
         */
        while (i < str.length() - 2) {

            /**
             * Case 1: If ".xyz" starts at the current index,
             * skip it by moving the pointer 4 positions ahead.
             * This ensures we ignore "xyz" occurrences that are prefixed by '.'.
             */
            if (str.startsWith(".xyz", i)) {
                i += 4;
            }

            /**
             * Case 2: If "xyz" starts at the current index (and not ".xyz"),
             * we’ve found a valid occurrence — return true immediately.
             */
            else if (str.startsWith("xyz", i)) {
                return true;
            }

            /**
             * Case 3: If neither condition matches,
             * simply move one step forward and continue scanning.
             */
            else {
                i++;
            }
        }

        /** No valid "xyz" found after scanning the entire string. */
        return false;
    }
}


//Using Recursion

class Solution {
    public boolean xyzThere(String str) {
        return xyzThere(str, 0);
    }

    private boolean xyzThere(String str, int index) {
        if (index + 3 > str.length()) {
            return false;
        }

        if (str.startsWith(".xyz", index)) {
            return xyzThere(str, index + 4);
        }

        if (str.startsWith("xyz", index)) {
            return true;
        }

        return xyzThere(str, index + 1);
    }
}
