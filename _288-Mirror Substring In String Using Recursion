//Without Recursion

class Solution{
  public String mirrorEnds(String str) {
    int i,n=str.length();

     for(i=0;i<n;i++){
       if(str.charAt(i)!=str.charAt(n-1-i)){
         break;
       }
     }

    return str.substring(0,i);
  }
}

//Using Recursion

class Solution{
  public String mirrorEnds(String str) {
    return mirrorEnds(str,0); 
  }

  public String mirrorEnds(String str,int index) {
     if(index>=str.length()){
        return "";
     }
   
     if(str.charAt(index)==str.charAt(str.length()-1-index)){
        return str.charAt(index)+mirrorEnds(str,index+1);
     }
  
     return "";
  }
}
