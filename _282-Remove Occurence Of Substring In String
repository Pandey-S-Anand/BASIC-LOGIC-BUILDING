//Using Recursion

class Solution{
   public String withoutString(String base, String remove) {
     if(base.length()<remove.length()){
       return base;
     }
  
     if(base.toLowerCase().startsWith(remove.toLowerCase())){
       return withoutString(base.substring(remove.length()),remove);
     }
  
     return base.charAt(0)+withoutString(base.substring(1),remove);
   }
}


//Without Recursion

class Solution{
  public String withoutString(String base, String remove) {
    StringBuilder result=new StringBuilder();
    int i=0;
  
    while(i<base.length()){
      if(base.toLowerCase().startsWith(remove.toLowerCase(),i)){
        i+=remove.length();
      }else{
        result.append(base.charAt(i));
        i++;
      }
    }
  
    return result.toString();
  }
}
