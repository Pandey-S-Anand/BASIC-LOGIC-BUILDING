//Without Using Recursion

class Solution {
    public boolean xyBalance(String str) {
        boolean isBalanced = true;

        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == 'x') {
                isBalanced = false;
            } else if (!isBalanced && str.charAt(i) == 'y') {
                isBalanced = true;
            }
        }

        return isBalanced;
    }
}


//Using Recursion

class Solution {
    public boolean xyBalance(String str) {
        return xyBalance(str, 0);
    }

    private boolean xyBalance(String str, int index) {
        if (index == str.length()) {
            return true;
        }

        // Check if there is a 'y' after the current 'x'
        if (str.charAt(index) == 'x' && (index + 1 == str.length() || !str.substring(index + 1).contains("y"))) {
            return false;
        }

        return xyBalance(str, index + 1);
    }
}
