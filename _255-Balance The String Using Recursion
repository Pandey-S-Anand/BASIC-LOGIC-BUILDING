//Without Using Recursion

class Solution{
   public boolean xyBalance(String str) {
     boolean foundX=false;
     for(char ch:str.toCharArray()){
       if(ch=='x'&& !foundX){
         foundX=true;
       }else if (ch=='y' && foundX){
         foundX=false;
       }
     }

     return !foundX;
   }
}


//Using Recursion

class Solution{
  public boolean xyBalance(String str) {
    if (str.isEmpty()) {
        return true;
    }
    
    // Check if there is a 'y' after the current 'x'
    if (str.charAt(0) == 'x' && !str.substring(1).contains("y")) {
       return false; 
    }
    
    return xyBalance(str.substring(1));
  }
}
