//Using Recursion

class Solution{
   public static  int[] findAllOccurence(int []arr,int idx,int target,int count){  //idx and count will be passed as 0
      if(idx==arr.length){
         return new int[count];
      }

      if(arr[idx]==target){
         count++;
         int[]allIndices=findAllOccurence(arr,idx+1,target,count);
         allIndices[count-1]=idx;

         return allIndices; 
      }else{ 
         return findAllOccurence(arr,idx+1,target,count);
      }
   }
}


//Without Recursion

class Solution{
   public static List<Integer> findAllOccurence(int []arr,int target){
      List<Integer>indices=new ArrayList<>();
      
      for(int i=0;i<arr.length;i++){
         if(arr[i]==target){
            indices.add(i);
         }
      } 
      
      return indices;
   }
}
