//Without Recursion

class Solution{
  public String altPairs(String str) {
    String res=""; 
    for(int i=0;i<str.length();i+=4){
       res=res+str.charAt(i) + ((i + 1) < str.length() ? str.charAt(i + 1) : "");
    } 
    return res;
  }
}


//Using Recursion

class Solution{
  public String altPairs(String str) {
    if(str.isEmpty()){
      return str;
    }
   
    return ""+str.charAt(0)+(1 < str.length() ? str.charAt(1) : "")+altPairs(str.length()<4?"":str.substring(4));
  }
}
