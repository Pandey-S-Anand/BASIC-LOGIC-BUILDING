//Without Recursion

class Solution {
    public String endX(String str) {
        int countX = 0;
        StringBuilder modifiedString = new StringBuilder();

        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) != 'x') {
                modifiedString.append(str.charAt(i));
            } else {
                countX++;
            }
        }

        while (countX --> 0) {
            modifiedString.append("x");
        }

        return modifiedString.toString();
    }
}


//Using Recursion

class Solution {
    public String endX(String str) {
        return endX(str, 0);
    }

    private String endX(String str, int index) {
        if (index == str.length()) {
            return "";
        }

        char currentChar = str.charAt(index);

        // If current character is 'x', push it to the end
        if (currentChar == 'x') {
            return endX(str, index + 1) + 'x';
        }

        // Otherwise, keep the character in place
        return currentChar + endX(str, index + 1);
    }
}


/*

Recursive Tree for Test Case : "xxre"

endX("xxre")
  |
endX("xre")+'x'
  |
endX("re")+'x'
  |
'r'+endX("e")
        |
     'e'+endX("")
              |
          return "";  (base case, returns empty string)
*/
