//Using Recursion

class Solution{
  public int count7(int n) {
    if(n==0){
      return 0;
    }
  
    return (((n%10)==7)?1:0)+count7(n/10);
  }
}


//Without Recursion

class Solution{
  public int count7(int num) {
    int count=0;
  
    while(num!=0){
      if(num%10==7){
        count++;
      }
    
      num=num/10;
    }
  
    return count;
  }
}
