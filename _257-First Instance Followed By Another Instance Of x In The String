//Using Recursion

class Solution {
    boolean doubleX(String str) {
        return doubleX(str, 0);
    }

    private boolean doubleX(String str, int index) {
        if (index == str.length()) {
            return false;
        }

        if (str.charAt(index) == 'x') {
            return (index < str.length() - 1 && str.charAt(index + 1) == 'x');
        }

        return doubleX(str, index + 1);
    }
}


// Without Recursion

class Solution {
    boolean doubleX(String str) {
        if (str.length() < 2) {
            return false;
        }

        int firstIndex = str.indexOf('x');

        if (firstIndex == -1) {
            return false;
        }

        return (firstIndex + 1) < str.length() && str.charAt(firstIndex + 1) == 'x';
    }
}
