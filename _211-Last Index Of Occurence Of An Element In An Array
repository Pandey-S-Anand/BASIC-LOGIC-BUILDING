//Using Recursion

class Solution{
   public static  int lastOccurence(int []arr,int target){ 
      if(arr.length==0){
        return -1;  //Not Found
      }
      
      if(arr[arr.length-1]==target){
	return arr.length-1;
      }
	     
      return lastOccurence(Arrays.copyOfRange(arr,0,arr.length-1),target);
   }
}


//Without Recursion

class Solution{
   public static  int lastOccurence(int []arr,int target){
      for(int i=arr.length-1;i>=0;i--){
         if(arr[i]==target){
            return i;
         }
      }
     return -1;
   }
}
