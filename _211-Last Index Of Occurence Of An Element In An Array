//Using Recursion

class Solution{
   public static  int lastOccurence(int []arr,int idx,int target){  //idx will be passed as (arr.length-1)
      if(idx==-1)
        return -1;  //Not Found
	     
      if(arr[idx]==target)
	return idx;
	     
      return lastOccurence(arr,idx-1,target);
   }
}


//Without Recursion

class Solution{
   public static  int lastOccurence(int []arr,int target){
      for(int i=arr.length-1;i>=0;i--){
         if(arr[i]==target){
            return i;
         }
      }
     return -1;
   }
}
