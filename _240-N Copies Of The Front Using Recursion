//Without Recursion

class Solution{
   public String frontTimes(String str, int n) {
     if(str.length()<3){
       return str.repeat(n);
     }

     return str.substring(0,3).repeat(n);
   }
}


//With Recursion

class Solution{
   public String frontTimes(String str, int n) {
     if (n == 0) {
       return "";
     }

     String front = str.length() < 3 ? str : str.substring(0, 3);

     return front + frontTimes(front, n - 1);
   }
}
