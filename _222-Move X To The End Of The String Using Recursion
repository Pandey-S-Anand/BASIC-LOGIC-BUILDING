class Solution{
   public String endX(String str) {
    if(str.isEmpty()){
     return str;
    }
  
    if(str.startsWith("x")){
     return endX(str.substring(1))+'x';
    }
  
    return str.charAt(0)+endX(str.substring(1));
  }
}


/*

Recursive Tree for Test Case : "xxre"

endX("xxre")
  |
endX("xre")+'x'
  |
endX("re")+'x'
  |
'r'+endX("e")
        |
     'e'+endX("")
              |
          return "";  (base case, returns empty string)
*/
